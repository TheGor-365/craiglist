<!DOCTYPE html>
<html>
  <head>
    <title>Craiglist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@100&display=swap" rel="stylesheet">
  </head>

  <body>

    <div class="container">
      <div class="row">
        <div class="col-3">
          <%= toastr_flash %>

          <%= link_to root_path, class: 'text-dark' do %>
            <%= image_tag('2662183.jpg', width: '200px',  height: '100px', class: 'mt-3 mb-4') %>
          <% end %>

          <p><%= link_to 'Create new post', new_post_path, class: 'btn btn-success btn-sm' unless is_auth? %></p>

          <%= render 'categories/category_sidebar' if controller.controller_name == 'categories' %>

          <% if is_home? || is_auth? %>
            <div class="nav-pages mt-5">
              <p><%= link_to 'help, faqs, abuse, legal', faqs_path %></p>
              <p><%= link_to 'avoid scams and fraud', scams_path %></p>
              <p><%= link_to 'personal safety tips', safety_path %></p>
              <p><%= link_to 'terms of use', terms_path %></p>
            </div>
          <% end %>
        </div>

        <div class="col-9">

          <div id="header">
            <%= render 'layouts/breadcrumb_nav' %>
          </div>

          <%= yield %>
        </div>
      </div>
    </div>
    <!-- <div id="notice"><%= notice %></div> -->
  </body>
</html>
